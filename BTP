import matplotlib
import numpy as np
import pylab as pl

x = [ 1,2,3,4,5]
y = [ 1,4,9,16,25]

datax=[]
datay=[] #for i in range x:

for number in datax: #data.append(x+=1)
       datax[number]=number+1

for number in datay:
         #data.append(x+=1)
        datay[number]=number+1



#Scaling about x-axis
print ( "enter the x value")
x = int(input())

for i in range x:
    scaledx[i]=datax[i]


pl.title('Plot-Amplitude vs Time')
pl.xlabel('Time')
pl.ylabel('Amplitude')
pl.plot(scaledx,y)
pl.show()

#Scaling about y-axis
print ( "enter the y value"),
